            <hr>
            <% @treatments.each do |treatment| %>
            <div class="row">
              <div class="col-sm-4">
                <p class="mb-0"><%= treatment.name %></p>
              </div>
              <div class="col-sm-4">
                <p class="text-muted mb-0"><%= treatment.interval %> días</p>
              </div>
              <div class="col-sm-4">
                <p class="text-muted mb-0">
                <%= link_to edit_treatment_path(treatment), class:"text-decoration-none" do %>
                <i class="fa-regular fa-pen-to-square text-secondary"></i>
                <% end %>
                <%= link_to treatment_path(treatment), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
