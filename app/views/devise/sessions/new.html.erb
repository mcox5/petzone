<div class="login m-auto p-5">
  <h2>Log in hola</h2>
</div>

<div class="container p-5">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="">
        <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "rounded-4" } %>
    </div>
    <div class="">
          <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "rounded-4" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="d-flex justify-content-center">
       <%= f.button :submit, "Log in", class:"bontonp btn btn-outline-light rounded-4" %>
    </div>
      <!--<button type="button" class="bontonp btn btn-outline-light rounded-4"><%= f.button :submit, "Log in" %></button>-->
  <% end %>
</div>
  <%= render "devise/shared/links" %>
