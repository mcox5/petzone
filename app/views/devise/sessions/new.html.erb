<div class="fondo">
  <div class="container-fluid">
    <div class="login m-auto p-5">
      <h2>Log in</h2>
    </div>


    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="container login">
          <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "rounded-4" } %>
            <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "rounded-4" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="d-flex justify-content-center">
        <%= f.button :submit, "Log in", class:"botonp btn btn-outline-warning rounded-4" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
