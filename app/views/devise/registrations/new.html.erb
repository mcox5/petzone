<div class="container-fluid">
  <div class="row">
    <div class="humano col-6 p-0">
    </div>
    <div class="humanos col-6 card p-3">

      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "rounded-4" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: "rounded-4" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", class: "rounded-4" } %>
          <div class="d-flex justify-content-center">
            <%= f.button :submit, "Sign up", class: "botont btn btn-outline-light rounded-4 w-100"  %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
