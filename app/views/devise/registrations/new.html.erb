<div class="container-fluid">
  <div class="row">
    <div class="humano col-6">
      <img src="https://bit.ly/3iVr0my" alt="">
    </div>
    <div class="card humanos col-5 card rounded-4 mx-5 p-3">

      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "rounded-4" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: "rounded-4" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", class: "rounded-4" } %>

          <%= f.button :submit, "Sign up", class: "cuenta btn-outline-success rounded-4"  %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
